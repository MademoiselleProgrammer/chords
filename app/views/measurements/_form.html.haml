= form_for(@measurement, html: {class: "new_or_edit_form" }) do |f|
  - if @measurement.errors.any?
    #error_explanation
      %h2
        = pluralize(@measurement.errors.count, "error")
        prohibited this measurement from being saved:
      %ul
        - @measurement.errors.full_messages.each do |message|
          %li= message
  .field
    = f.collection_select :instrument_id, Instrument.order(:name),:id,:name, include_blank: false
  .field
    = f.label :parameter
    %br/
    = f.text_field :parameter
  .field
    = f.label :value
    %br/
    = f.text_field :value
  .field
    = f.label :unit
    %br/
    = f.text_field :unit
  .actions
    = f.submit
