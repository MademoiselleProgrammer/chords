<h1>Create a New Variable for <%= @instrument.name %> </h1>

<%= form_for(@var, html: {class: "new_or_edit_form" }) do |f| %>

<div class="field">
  <table>
    <% @currentvars.each do |v| %>
      <tr>
        <td align="right">
          <%= v.name %>
        </td>
        <td align="right">
          <%= v.shortname %>
        </td>
      </tr>
    <% end %> 
    
    <tr>
      <td align="right">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </td>
      <br/>
      <td align="right">
        <%= f.label :shortname %>
        <%= f.text_field :shortname %>
      </td>
      <br/>
      <td align="right">
        <%= f.hidden_field :instrument_id, :value => params[:inst_id], :readonly => true %>
      </td>
      <br/>
    </tr>
  </table>
</div>

<div class="field">
  <%= f.submit %>
</div>

<% end %>

<%= link_to 'Back', instruments_path(@var.instrument) %>
