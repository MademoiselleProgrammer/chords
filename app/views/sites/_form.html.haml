= form_for(@site, html: {class: "new_or_edit_form" }) do |f|
  - if @site.errors.any?
    #error_explanation
      %h2
        = pluralize(@site.errors.count, "error")
        prohibited this site from being saved:
      %ul
        - @site.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :lat
    %br/
    = f.text_field :lat
  .field
    = f.label :lon
    %br/
    = f.text_field :lon
  .actions
    = f.submit
